
<%= form_tag("/posts/#{@post.id}/update") do %>
    <div class="form">
        <div class="form-body">
            <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
                <%= message %>
            </div>
            <% end %>
            <input type="text" name="post_text" value="<%= @post.post_text %>">

            <input type="submit" value="編集">
        </div>
    </div>
<% end %>
