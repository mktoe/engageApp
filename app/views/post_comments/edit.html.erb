
<%= form_tag("/post_comments/#{@post_comment.id}/update") do %>
    <div class="form">
        <div class="form-body">
            <% @post_comment.errors.full_messages.each do |message| %>
            <div class="form-error">
                <%= message %>
            </div>
            <% end %>
            <input type="text" name="comment_text" value="<%= @post_comment.comment_text %>">

            <input type="submit" value="編集">
        </div>
    </div>
<% end %>
